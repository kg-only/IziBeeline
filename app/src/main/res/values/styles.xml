<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ButtonGradient" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_button_background</item>
        <item name="android:elevation">0dp</item>
        <item name="android:foreground">@drawable/gradient_button_ripple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonGradient." parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="elevation">0dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:theme">@style/SplashTheme</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">41dp</item>
<!--        <item name="backgroundTint">@drawable/xml_selector_btn_contained_bg_tint</item>-->
        <item name="android:elevation">0dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ViewPagerIndicator">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:background">@drawable/tab_indicator_default</item>
    </style>

    <style name="InactiveBottomItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FloatingButton" parent="@style/Widget.Material3.FloatingActionButton.Tertiary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>